@model testProyecto.Models.Correo
@{
    ViewData["Title"] = "Detalle de Correo";
}


<h1 class="text-center">Contacto de las empresas</h1>

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Detalle de Correo</strong></h3>
            </div>
            <div class="card-body">

                <ul class="list-group">
                    <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(m => m.Email)</li>
                    <li class="list-group-item"><strong>Password: </strong>@Html.DisplayFor(m => m.Password)</li>
                    <li class="list-group-item"><strong>Cliente: </strong>@Html.DisplayFor(m => m.Cliente)</li>
                    <li class="list-group-item"><strong>Principal: </strong>@Html.DisplayFor(m => m.Principal)</li>
                </ul>

                
                <a asp-controller="Inicio" asp-action="Index">Volver</a>
            </div>
        </div>
    </div>
</div>